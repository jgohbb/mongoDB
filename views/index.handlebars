<nav class="top-bar topbar-responsive">
  <div class="top-bar-title">
    <span data-responsive-toggle="topbar-responsive" data-hide-for="medium">
      <button class="menu-icon" type="button" data-toggle></button>
    </span>
    <a class="topbar-responsive-logo" href="#"><strong>NPR News Scraper</strong></a>
  </div>
  <div id="topbar-responsive" class="topbar-responsive-links">
    <div class="top-bar-right">
      <ul class="menu simple vertical medium-horizontal">
        <li><a href="/">Home</a></li>
        <li><a href="/saved" id='saved-articles'>Saved Articles</a></li>
        <div class="button">
          <li><a href="/scrape" id="scrape">Get News!</a></li>
        </div>
        <div class="button" id="delete">
          <li><a href="/delete-articles">Clear News!</a></li>
        </div>
      </ul>
    </div>
  </div>
</nav>

<div class="title-container animated fadeIn">
  <h1>NEW ARTICLES</h1>
  <h2>You have scraped <span id="numArticles"></span> new articles</h2>
  <h5>NPR World News</h5>
</div>

<div class="container-md" id="article-container">
    <div class="row">
    {{#if articles}}
      {{#each articles}}
        {{#unless saved}}
          <div class="col-md-12">
            <div class="card animated fadeIn" data-id={{_id}} style="width: 300px;">
              <div class="reveal" id="cardModal{{_id}}" data-reveal>
                <div class="note-container">
                  <p><button class="button expanded" id="show-notes" data-id={{_id}}>Show Note</button></p>
                  <h2>NOTES </h2><div id="note-holder" data-id={{_id}}></div>
                </div>
                  <input class="titleinput" type="text" value="" placeholder="Enter Title">
                  <input class="bodyinput" type="text" value="" placeholder="Enter Note">
                <div class="button" value="submit" id="savenote" data-id="{{_id}}" data-close>Submit</div>
                <div class="button float-right" value="delete" id="delete-note" data-id="{{_id}}" data-close>Delete</div>
                <button class="close-button" style="color: white, background-color: red" data-close aria-label="Close modal" type="button">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="card-divider">
                  <h4><a href="{{link}}" target="_blank">{{title}}</a></h4>
              </div>
              {{#if note}}
                <p>{{note.body}}</p>
              {{/if}}
              {{!-- <p><button class="button expanded" data-open="cardModal{{_id}}">Add Note</button></p> --}}
              <div class="button expanded" data-open="cardModal{{_id}}"><span>
                Add Note</span>
              </div>
              <div class="button save-article" data-id="{{_id}}"><span>
                Save</span>
              </div>
            </div>
          </div>
        {{/unless}}
      {{/each}}
      {{else}}
        <div class="empty-container title-container animated fadeIn">
          <h1>Get new articles by scraping with the "GET NEWS!" button.</h1>
        </div>
    {{/if}}
    </div>
</div>



<div class="footer">
    <p>NPR MongoDB Scraper</p>    
</div>




